    .l-margin-start
    if url.endsWith('/notes')
        a.l-divider(href=`/dm/${user.username}`)
            .c-divider__left
                h1 &#10525; Notas
            .c-divider__right
    else
        a.l-divider(href=`/dm/${user.username}/notes`)
            .c-divider__left
