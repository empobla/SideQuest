                    h1 &#10525; Nota Nueva
                else
                    h1 &#10525; Editar Nota: #{note.name}
            .c-divider__right
    
    if url.endsWith('/notes')
        .l-main-content
            .l-search
                form.c-search(action='')
                    .c-search__input
                        label(for='name') Nombre de la nota
                        input(type='text' name='name' id='name' placeholder='Buscar nota por nombre' disabled)
                    .c-search__input--button
                        button.c-button--large.m-background-lightgray(type='' disabled) Buscar
        
            .l-margin--2
            .l-ability-points-grid.grid--3
