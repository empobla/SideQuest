doctype html
html
  head
    title= title

    //- Stylesheet
    link(rel='stylesheet', href='/stylesheets/style.css')
    
    //- Favicon
    link(rel="icon" type="image/png" href="/images/logos/sidequestlogo1.png")
  body
    //- Global Variables
    - const tmpImg = 'https://lunawood.com/wp-content/uploads/2018/02/placeholder-image.png'
    
    //- Header/Nav
    header
      nav
        img.logo(src='/images/logos/sidequestlogo.png', alt="SideQuest DnD logo")
        h1 SideQuest DnD

        ul
          li
            a(href="/") Inicio
          li
            a(href="/heroes") Heroes
          li
            a(href="/story") Historia
          li
            a(href="/characters") Personajes
          //- If user is not logged in
          if !user
            li
              a(href="/users/login") Ingresar
          //- Else if user is logged in
          else
            li
              a(href=`/users/user/${user.username}`) #{user.username}
            li
              a(href="/users/logout")
                img.icon(src='/images/icons/logout.png' alt="logout")
          
    block content
